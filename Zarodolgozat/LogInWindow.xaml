<Window x:Class="Zarodolgozat.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zarodolgozat"
        mc:Ignorable="d"
        Title="LogInWindow" Height="300" Width="324">
    <Grid>
        <Label x:Name="label" Content="Kérjük jelentkezzen be!" HorizontalAlignment="Left" Margin="20,21,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Label x:Name="label1" Content="Felhasználónév:" HorizontalAlignment="Left" Margin="40,111,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1_Copy" Content="Jelszó:" HorizontalAlignment="Left" Margin="40,156,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="userNameTextBox" HorizontalAlignment="Left" Height="26" Margin="155,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="125"/>
        <Button x:Name="logInOkButton" Content="OK" HorizontalAlignment="Left" Margin="80,220,0,0" VerticalAlignment="Top" Width="160" Height="39" Click="LogInOkButtonClick"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="26" Margin="155,156,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="125" PasswordChar="*"/>

    </Grid>
</Window>
