<Window x:Class="Zarodolgozat.AgreementFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zarodolgozat"
        mc:Ignorable="d"
        Title="AgreementFormWindow" Height="300" Width="550">
    <Grid>
        <ListBox SelectedItem="{Binding SelectClient}" ItemsSource="{Binding ClientList}" HorizontalAlignment="Left" Height="249" Margin="10,10,0,0" VerticalAlignment="Top" Width="260">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding FirstName}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <DatePicker HorizontalAlignment="Left" Height="43" Margin="320,40,0,0" VerticalAlignment="Top" Width="160" FirstDayOfWeek="Monday" Text="{Binding Agreement.StartDate}"/>
        <DatePicker HorizontalAlignment="Left" Height="43" Margin="320,118,0,0" VerticalAlignment="Top" Width="160" FirstDayOfWeek="Monday" Text="{Binding Agreement.EndDate}"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Height="48" Margin="320,199,0,0" VerticalAlignment="Top" Width="160"/>

    </Grid>
</Window>
