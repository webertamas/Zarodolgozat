<Window x:Class="Zarodolgozat.DailyLogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zarodolgozat"
        mc:Ignorable="d"
        Title="DailyLogView" Height="300" Width="802.716">
    <Grid>
        <!--<DataGrid ItemsSource="{Binding AgreementList}" HorizontalAlignment="Left" Height="205" Margin="296,40,0,0" VerticalAlignment="Top" Width="431"/>-->
        <DataGrid ItemsSource="{Binding FilteredAgreements}" HorizontalAlignment="Left" Height="205" Margin="20,37,0,0" VerticalAlignment="Top" Width="220">
        </DataGrid>
        <DatePicker SelectedDate="{Binding ChosenDate,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="61" Margin="302,38,0,0" VerticalAlignment="Top" Width="181"/>
        <DataGrid ItemsSource="{Binding AgreementList}" HorizontalAlignment="Left" Height="205" Margin="565,40,0,0" VerticalAlignment="Top" Width="220" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="test1" Binding="{Binding StartDate}" />
                <DataGridTextColumn Header="test2" Binding="{Binding Client.FirstName}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
